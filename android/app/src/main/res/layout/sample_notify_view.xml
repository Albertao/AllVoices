<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <ImageView
        android:id="@+id/albumPic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/cd"
        android:background="#eee"
        />
    <RelativeLayout
        android:layout_width = "match_parent"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/albumPic"
        android:layout_toRightOf="@id/albumPic"
        android:background="#fff">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <LinearLayout
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="60dp"
                    android:layout_weight="6">
                    <TextView
                        android:maxLines="1"
                        android:id="@+id/song_name"
                        android:layout_height="30dp"
                        android:layout_width="match_parent"
                        android:ellipsize="marquee"
                        android:text="加载中……"
                        android:textAlignment="gravity"
                        android:textColor="#404040"
                        android:textSize="18sp" />
                    <TextView
                        android:maxLines="1"
                        android:textSize="14sp"
                        android:ellipsize="end"
                        android:id="@+id/song_info"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:textAlignment="gravity"
                        android:textColor="#737373"
                        android:text="加载中……"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/btn_exit"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:background="#fff"
                        android:src="@android:drawable/ic_menu_close_clear_cancel" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageButton
                    android:id="@+id/btn_prev"
                    android:layout_height="40dp"
                    android:layout_width="60dp"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:src="@mipmap/ic_skip_previous_black_24dp"
                    android:background="?android:attr/selectableItemBackground"/>
                <ImageButton
                    android:id="@+id/btn_play_or_pause"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="40dp"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_pause_circle_outline_black_24dp" />
                <ImageButton
                    android:id="@+id/btn_next"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="60dp"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_skip_next_black_24dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
